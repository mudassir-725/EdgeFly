{
  "info": {
    "name": "EdgeFly API Suite v1.7",
    "_postman_id": "edgefly-v1-7-collection",
    "description": "Comprehensive EdgeFly API collection including auth, flights, ELI agent, wishlist, dashboard, recommendations, and search history endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "auth_token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Guest Flight Search (No Auth)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\"origin\":\"LHR\",\"destination\":\"JFK\",\"departureDate\":\"2025-10-29\",\"returnDate\":\"2025-11-03\",\"travelClass\":\"ECONOMY\",\"passengers\":1}"
            },
            "url": "{{base_url}}/api/flights/guest"
          }
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"edgeuser18@example.com\",\"password\":\"password123\"}"
            },
            "url": "{{base_url}}/api/auth/register"
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"edgeuser18@example.com\",\"password\":\"password123\"}"
            },
            "url": "{{base_url}}/api/auth/login"
          }
        },
        {
          "name": "Get User Info (/me)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": "{{base_url}}/api/auth/me"
          }
        },
        {
          "name": "Logout User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": "{{base_url}}/api/auth/logout"
          }
        }
      ]
    },
    {
      "name": "Flights",
      "item": [
        {
          "name": "User Flight Search",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"origin\":\"LHR\",\"destination\":\"DXB\",\"departureDate\":\"2025-11-20\",\"returnDate\":\"2025-11-25\",\"travelClass\":\"ECONOMY\",\"passengers\":1}"
            },
            "url": "{{base_url}}/api/flights"
          }
        },
        {
          "name": "Autocomplete Airport",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/flights/autocomplete?keyword=New"
          }
        },
        {
          "name": "Amadeus API Test",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/flights/test"
          }
        }
      ]
    },
    {
      "name": "EdgeAgent (ELI)",
      "item": [
        {
          "name": "Chat with ELI (Authenticated)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"message\":\"Find me the best flight from Madrid to New York on 29 Oct.\"}"
            },
            "url": "{{base_url}}/api/agent/query"
          }
        },
        {
          "name": "Chat with ELI (Guest - Unauthorized)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\"message\":\"Find me a cheap flight to Tokyo next month.\"}"
            },
            "url": "{{base_url}}/api/agent/guest"
          }
        }
      ]
    },
    {
      "name": "User Features",
      "item": [
        {
          "name": "Wishlist",
          "item": [
            {
              "name": "Get Wishlist",
              "request": {
                "method": "GET",
                "header": [
                  { "key": "Authorization", "value": "Bearer {{auth_token}}" }
                ],
                "url": "{{base_url}}/api/wishlist"
              }
            },
            {
              "name": "Add Wishlist",
              "request": {
                "method": "POST",
                "header": [
                  { "key": "Authorization", "value": "Bearer {{auth_token}}" },
                  { "key": "Content-Type", "value": "application/json" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\"origin\":\"LHR\",\"destination\":\"HYD\",\"departureDate\":\"2025-11-20\",\"returnDate\":\"2025-11-25\",\"price\":480.25,\"airline\":\"EK\"}"
                },
                "url": "{{base_url}}/api/wishlist"
              }
            },
            {
              "name": "Delete a Wishlist",
              "request": {
                "method": "DELETE",
                "header": [
                  { "key": "Authorization", "value": "Bearer {{auth_token}}" }
                ],
                "url": "{{base_url}}/api/wishlist/12"
              }
            }
          ]
        },
        {
          "name": "Dashboard Data",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": "{{base_url}}/api/dashboard"
          }
        },
        {
          "name": "Recommendations",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": "{{base_url}}/api/recommendations"
          }
        },
        {
          "name": "Search History",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": "{{base_url}}/api/search"
          }
        }
      ]
    }
  ]
}
